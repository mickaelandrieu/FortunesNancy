@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<FortunesNancy.Fortune[]>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Fortunes by mickaelandrieu using NancyFx web framework</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="padding-top: 70px;">
    <div class="container">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <a class="navbar-brand" href="#">Fortunes</a>
            <ul class="nav navbar-nav">
                <li><a href="#">Last</a></li>
                <li><a href="#">Top</a></li>
                <li><a href="#">Flop</a></li>
            </ul>
            <form method="get" action="/" class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <input type="text" name="q" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </nav>
        <div class="row">
            <form action="/fortunes" method="post" class="col-md-6 col-md-offset-3">
                <div class="form-group">
                    <input type="text" name="quote" value="<nickname> : quote ..." class="form-control" />
                </div>
                <div class="form-group">
                    <input type="text" name="author" value="John Doe" class="form-control" />
                </div>
                <div class="form-group pull-right">
                    <input type="submit" value="add" class="btn btn-primary"/>
                </div>
            </form>
        </div>
        @foreach (var fortune in @Model)
        {
            <div class="panel panel-default">
                <dl class="dl-horizontal">
                    <dt>@fortune.author</dt>
                    <dd>@fortune.quote</dd>
                </dl>
                <div class="panel-footer">
                    <a href="#">
                        #@fortune.id
                    </a>
                    by @fortune.author

                    <div class="pull-right votes" data-fortune-id="@fortune.id">
                        <a href="#"><span class="badge">-</span></a>
                        <span class="label label-">@fortune.votes</span>
                        <a href="#"><span class="badge">+</span></a>
                    </div>
                </div>                    
            </div>
        }
    </div>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
</body>
</html>
